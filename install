#!/bin/bash
git clone https://github.com/k-takata/minpac.git ~/.config/nvim/pack/minpac/opt/minpac
git clone https://github.com/Odyssey2247/nvimDE tmpVim
mv tmpVim/* ~/.config/nvim/
rm -rf tmpVim
echo -e "-----------------------------------"
echo "Now open nvim (ignore errors) and run:"
echo "	:PackUpdate"
echo "restart nvim and fun!!!"
echo -e "-----------------------------------"
